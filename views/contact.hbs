    {{!-- Container Contact --}}

    <div class="container">
        <div class="row">
            <div class="col-md-4 m-auto container-contact">
                <div class="card p-5 form-contact">
                    <form action="">
                        <h1 class="text-center">Contact Me</h1>
                        <div class="mb-3">
                            <label for="input-name" class="form-label">name</label>
                            <input name="input-name" type="text" class="form-control" id="input-name" >
                        </div>
                        <div class="mb-3">
                            <label for="input-email" class="form-label">Email</label>
                            <input name="input-email" type="text" class="form-control" id="input-email" >
                        </div>
                        <div class="mb-3">
                            <label for="input-phoneNumber" class="form-label">Phone Number</label>
                            <input name="input-phoneNumber" type="number" class="form-control" id="input-phoneNumber" >
                        </div>
                        <div class="mb-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="input-checkbox1" value="Web Development">
                                <label class="form-check-label" for="input-checkbox1">Web Development</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="input-checkbox2" value="Mobile Development">
                                <label class="form-check-label" for="input-checkbox2">Mobile Development</label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="input-subject" class="form-label">Subject</label>
                            <select class="form-select" aria-label="Default select example" id="input-subject">
                                <option value="">Select Here</option>
                                <option >Hiring</option>
                                <option >Privaci Police</option>
                                <option >Problem in Our Site</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="input-massage" class="form-label">Your Massage</label>
                            <textarea name="inputmassage" class="form-control" id="input-massage" rows="5"></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-orange-red " onclick="submitData()">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
    






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
